<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".infromasiBasah">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warna_utama"
        android:padding="10dp"
        android:id="@+id/main_toolbar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CleanTrack Manajer"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warna_utama"
        android:textStyle="bold"
        android:text="CUCI BASAH"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/basah"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/warna_utama"
        android:textStyle="italic"
        android:gravity="center"
        android:text="Cuci basah adalah proses pencucian pakaian yang melibatkan penggunaan air dan deterjen untuk membersihkan pakaian. Setelah proses pencucian selesai, pakaian tetap dalam keadaan basah dan memerlukan pengeringan alami atau menggunakan mesin pengering. Proses ini sering kali lebih lambat dibandingkan dengan cuci kering karena memerlukan waktu ekstra untuk pengeringan. Meskipun begitu, cuci basah umumnya dapat menjaga kelembaban alami kain dan dapat lebih baik untuk jenis kain tertentu yang tidak direkomendasikan untuk pengeringan panas."
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        />


</LinearLayout>