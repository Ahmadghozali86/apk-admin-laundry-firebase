<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"

            android:background="@color/warna_utama">

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan"
                android:textSize="15dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/namaPelanggan"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Nama Admin"
                android:textSize="15dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />

            <TextView
                android:textSize="15dp"
                android:textColor="@color/warna_utama"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namaAdmin"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Berat Pakaian"
                android:textSize="15dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/beratPakaian"

                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=".Kg"
                android:textStyle="bold"
                android:textColor="@color/warna_utama"
                android:textSize="15dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Biaya Cuci"
                android:textSize="15dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/hargatotal"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Saldo Pembelian"
                android:textSize="15dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/saloPembelian"

                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Saldo Kembalian"
                android:textSize="15dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saloPengembalian"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/warna_utama"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"

            android:background="@color/warna_utama">

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>